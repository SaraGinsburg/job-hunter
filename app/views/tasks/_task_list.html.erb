<div>
    <!-- List of tasks -->    
    <ul>
    
        <% tasks.each do |task| %>
            <%= render partial: 'tasks/task', locals: {task: task} %>
        <% end %>
        <li class="task-item">
        <button class="add-task-button inline float-left" id="collapse-btn-<%=job_application_id%>" type="button" data-toggle="collapse" data-target="#formfor<%=job_application_id%>" aria-expanded="false" aria-controls="formfor<%=job_application_id%>">+</button>
        <div class = "collapse inline float-left" id="formfor<%=job_application_id%>">
            <%= render partial: 'tasks/new_task', locals: {job_application_id: job_application_id} %>
        </div>
        <script>$('#collapse-btn-<%=job_application_id%>').click(function(){
            if ($(this)["0"].textContent === "+" ) {
                $(this)["0"].textContent = "\u2014"
            } else {
                $(this)["0"].textContent = "+"
            }
        })</script>
        </li>
    </ul>
     
</div>