<% if task.done == true %>
    <%# Check if task is done to show different check boxes  %>
    <li><%= form_tag task_path(task), method: "patch" do%><%= check_box('task','done',{:onchange => "this.form.submit();event.stopPropagation();", checked: true },('false'),('false')) %>  <% end %> <p onclick="showEditForm()" class="inline"><%= task.description %> <%= link_to "x", task_path(task), method: "delete" %></p></li>
<% else %>
    <li><%= form_tag task_path(task), method: "patch" do%><%= check_box('task','done',{:onchange => "this.form.submit(); event.stopPropagation();" },('true'),('false')) %>  <% end %> <p onclick="showEditForm()" class = "inline"> <%= task.description %> <%= link_to "x", task_path(task), method: "delete" %></p></li>
<% end %>