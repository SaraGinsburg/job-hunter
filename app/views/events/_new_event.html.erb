<%= form_tag events_path, class:"form-inline" do %>
        <div class="form-group">
            <%= text_field_tag "event[title]",nil, {class: "form-control m-1", placeholder:"Event Title",  required:true} %>
        </div>
        <div class="form-group">
            <%= text_field_tag "event[address]",nil, {class: "form-control m-1", placeholder:"Address", required:true}  %>
        </div>
        <div class="form-group">
            <%= date_field_tag "event[date]",nil, {class: "form-control m-1", required:true, min: "#{Date.today}"} %>
        </div>
        <%= hidden_field_tag "event[job_application_id]", job_application_id %>
        <%= submit_tag "Add Event", class: "btn btn-primary m-1" %>
        
<% end %>